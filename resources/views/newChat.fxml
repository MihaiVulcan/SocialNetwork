<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane stylesheets="@../css/everyone.css" prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="socialnetwork.ui.gui.NewChatController">
   <children>
      <VBox alignment="CENTER" layoutX="25.0" prefHeight="600.0" prefWidth="350.0">
         <children>
            <Label alignment="CENTER" prefHeight="22.0" prefWidth="352.0" text="Users:">
               <font>
                  <Font size="17.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <ListView fx:id="lstUsers" prefHeight="400.0" prefWidth="400.0" />
            <Label text="GroupName">
               <font>
                  <Font size="15.0" />
               </font>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="txtGroup">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <Label text="First Message">
               <font>
                  <Font size="15.0" />
               </font>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </Label>
            <TextField fx:id="txtMessage">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <Button contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#createNewChat" prefHeight="6.0" prefWidth="155.0" text="New Chat">
               <font>
                  <Font size="15.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
